<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingProfileActivity">

    <TextView
        android:background="#ebebeb"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting Profile"
        android:fontFamily="@font/cl_bold"/>

    <ListView
        android:layout_below="@+id/tv_setting"
        android:id="@+id/listviewsetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_below="@+id/listviewsetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#00a5ff"
        android:id="@+id/logout"
        android:fontFamily="@font/bebas"
        />
</RelativeLayout>